@"
* text=auto eol=lf

# Enforce LF for main file types
*.py   text eol=lf
*.md   text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.sh   text eol=lf
*.ps1  text eol=lf

# Binary files
*.png  binary
*.jpg  binary
*.pdf  binary
"@ | Set-Content -LiteralPath .gitattributes -Encoding utf8
